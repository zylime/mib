.c-popup
  // display none
  position fixed
  z-index 99
  top 50%
  transform translateY(-50%)
  width 90%
  left 5%
  background $col-white
  text-align center
  padding 20px
  &--cover
    // display none
    position absolute
    width 100%
    height 100%
    background rgba(0, 0, 0, 0.6)
    z-index 10
    top 0
    left 0
  &--code
    .warning
      display none
      font-size 14px
      color $col-cinnabar
    .ic--close--black
      position relative
      z-index 1
    h2
      font-size 26px
      line-height 34px
    input
      display inline-block
      font-size 26px
      line-height 30px
      width 30px
      margin 0 5px
      border 1px solid $col-persian-green
      border-radius 5px
    .btn-type-1
      width 150px
      margin auto
      display block
    .login-btn
      background $col-iron
      color $col-white
      width 100%
      display block
      height 50px
      line-height 50px
      border-radius 5px
  &--register
    img
      width 80px
  &--verify-email
    display none
    a
      &.btn-type-2
        display inline-block
        width 48%
        &:nth-of-type(2)
          margin-right 2%
        &:nth-of-type(3)
          margin-left 2%
        &.disabled
          background $col-iron
          color $col-white
    &--subscription
      p
      .checkbox
        display inline-block
        vertical-align middle
      p
        width calc(100% - 100px) 

    .subscription
      visibility hidden
      position absolute
      width 100%
      height 100%
    .checkbox
      background $col-persian-green
      height 40px
      position relative
      width 50px
      margin-left 30px
      
      &:before
      &:after
        content ""
        width 40px
        height 40px
        background $col-persian-green
        border-radius 50%
        position absolute
        top 0
        display block
        
      &:before
        left -20px
      &:after
        right -20px
      .icon
        width 40px
        height 40px
        border 2px solid $col-persian-green
        position absolute
        background $col-white
        left -20px
        top 0
        border-radius 50%
        box-sizing border-box
        transition all .3s
        z-index 1
          
      &.checked
        .icon
          left 30px
        