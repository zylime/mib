.c-popup
  // display none
  position fixed
  z-index 99
  top 50%
  transform translateY(-50%)
  width 90%
  left 5%
  background $col-white
  text-align center
  padding 20px
  border-radius 5px
  &--cover
    display none
    position absolute
    width 100%
    height 100%
    background rgba(0, 0, 0, 0.3)
    z-index 10
    top 0
    left 0
  &--code
    display none
    .l-flex
      justify-content space-between
    .warning
      // display none
      font-size 14px
      color $col-cinnabar
    .ic--close--black
      position relative
      z-index 1
      margin-top 8px
    h2
      font-size 20px
      line-height 34px
    input
      display inline-block
      font-size 26px
      line-height 10vw
      width 15%
      margin 0 5px
      border 1px solid $col-persian-green
      border-radius 5px
    .btn-type-1
      width 150px
      margin auto
      display block
      height 35px
      line-height 35px
      font-size 12px
      &[disabled]
      &.disabled
        color $col-iron
    .login-btn
      background $col-persian-green
      color $col-white
      width 100%
      display block
      height 50px
      line-height 50px
      border-radius 5px
      &[disabled]
      &.disabled
        background $col-iron
        
  &--reset-psw
    img
      width 80px
    h2
      font-size 18px
      font-weight normal
  &--register
    display none
    img
      width 80px
    h2
      font-weight normal
      font-size 18px
  &--verify-email
    display none
    a
      &.btn-type-2
        display inline-block
        width 48%
        &:nth-of-type(2)
          margin-right 2%
        &:nth-of-type(3)
          margin-left 2%
        &[disabled]
        &.disabled
          background $col-iron
          color $col-white
    &--subscription
      p
      .checkbox
        display inline-block
        vertical-align middle
      p
        width calc(100% - 100px) 

    .subscription
      visibility hidden
      position absolute
      width 100%
      height 100%
    .checkbox
      background $col-persian-green
      height 30px
      position relative
      width 60px
      margin-left 37px
      border-radius 50px
      .icon
        width 30px
        height 30px
        border 2px solid $col-persian-green
        position absolute
        background $col-white
        left 0
        top 0
        border-radius 50%
        box-sizing border-box
        transition all .3s
        z-index 1
          
      &.checked
        .icon
          left 30px
        