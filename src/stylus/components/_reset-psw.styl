.c-reset-psw
  .warning
    display none
    color $col-cinnabar
    margin-top 10px
  &--form
    margin-top 20px

    &--rol
      margin-top 15px
      padding 10px 0
      input
        // font-size 20px
        width 100%
        background $col-white
        &.input-psw
          width calc(100% - 100px)
      .btn-type-1
        display inline-block
        height 40px
        line-height 40px
        width 100px
    
    .btn-type-2
      width 100%
      margin-top 40px
      border none