.c-product-info
  &--form--media
    .input-file
      position absolute
      width 100%
      height 100%
      left 0
      top 0
      opacity 0
      z-index 1
    
  .input-file
    position absolute
    width 100%
    height 100%
    left 0
    top 0
    opacity 0
    z-index 1
  &--form
    .title
      font-size 16px
      line-height 20px
      font-weight bold
    textarea
      border none
      font-size inherit
      width 100%
    input
    textarea
    span
      font-size 16px
      line-height 20px
      font-weight 300
    input
    textarea
      &::-webkit-input-placeholder
        color $col-silver-sand-2
        font-weight 300
      &:-moz-placeholder
        color $col-silver-sand-2
        font-weight 300
      &::-moz-placeholder
        color $col-silver-sand-2
        font-weight 300
      &:-ms-input-placeholder
        color $col-silver-sand-2
        font-weight 300
    textarea
    input
      &.error
        border 1px solid red
        border-radius 5px
        display block

    
    &--media
      display flex
      flex-wrap wrap
      .item
        background $col-cornflower-blue
        color $col-persian-green
        width 100px
        height 100px
        position relative
        margin 0 20px 20px 0
        &.uploaded
          overflow hidden
          background $col-white
          border 1px solid $col-iron
          img
            position absolute
            max-width 100%
            max-height 100%
            top 50%
            left 50%
            transform translate(-50%, -50%)
          .item--content
            display none
            
        &--content
          position absolute
          top 50%
          left 0
          width 100%
          transform translateY(-50%)
          text-align center
          span
            color $col-persian-green
            font-size 13px
            margin-top 5px
            display block
            font-weight 500
          .ic--add-3
            margin auto
            width 25px
            height 25px
    #comments
      margin-bottom 0
      height 20px