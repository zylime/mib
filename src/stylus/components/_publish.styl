.c-publish
  input
    width 100%
    font-size 16px
    line-height 20px
    font-weight 300
  textarea
    width 100%
    font-size 16px
    line-height 20px
    border none
    font-weight 300
  input
  textarea
    &::-webkit-input-placeholder
      color $col-silver-sand-2
      font-weight 300
    &:-moz-placeholder
      color $col-silver-sand-2
      font-weight 300
    &::-moz-placeholder
      color $col-silver-sand-2
      font-weight 300
    &:-ms-input-placeholder
      color $col-silver-sand-2
      font-weight 300
  .title
    font-size 16px
    line-height 20px
    font-weight 500
  .light
    font-size 16px
    font-weight 300
    line-height 20px
  .note
    font-size 14px
    font-weight 300
    line-height 20px
  .ic--add-3.large
    width 25px
    height 25px
  &--categories
    .heading
      font-size 18px
    &--item
      border-bottom 1px solid $col-iron
      padding-top 20px
      padding-bottom 20px
      .heading
        cursor pointer
      &--content
        display none
      &.selected
        .heading
          color $col-bittersweet
    ul
      margin-top 10px
      // margin-bottom 20px

      li
        list-style-type none
        display inline-block
        margin 15px 10px 15px 0
        box-sizing border-box
        cursor pointer
        span
          padding 8px 15px
          font-size 16px
          line-height 24px
          background $col-cornflower-blue
          border-radius 5px
        &.selected
          span
            color $col-bittersweet
      
  