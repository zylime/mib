.c-friends
  &--subtitle
    background $col-cornflower-blue
    color $col-tundora
    padding 15px 20px
  &--people
    img
      width 45px
      display inline-block
      vertical-align middle
      margin-right 10px
    &--info
      display inline-block
      vertical-align middle
      .note
        color $col-tundora
        font-weight 200
  .c-list--item
    padding 20px
    .btn-type-2
      width 60px
      line-height 30px
      height 30px
      display inline-block
    .ic--checkbox-3
      display inline-block
      margin-top 3px
  &--select
  &--delete
    display none
    border-bottom 1px solid $col-iron
    .c-chat-detail--group
      padding-bottom 0
      li
        list-style-type none
        width 13%
        margin 10px 2% 10px
        &:nth-of-type(6n+1)
          margin-left 0
  &--category
    background $col-cornflower-blue
    padding 10px 20px
    
    