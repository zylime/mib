.c-notification
  &--item
    background-color $col-catskill-white
    border 1px solid $col-persian-green
    box-sizing border-box
    border-radius 5px
    padding 15px
    display block
    margin-bottom 20px
    .title
      font-size 18px
      margin-bottom 10px
      font-weight bold
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
    p
      font-size 16px
      line-height 24px
    .sender
    .time
      color $col-gray
    .sender
      margin-top 15px
      font-size 13px
    .time
      margin-bottom 10px
      font-size 12px
      margin-top 5px
    