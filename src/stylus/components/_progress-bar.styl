.c-progress-bar
  position relative
  width 100%
  &__background
    background-color $col-iron
    position relative
    width calc(100% - 50px)
    height 8px
    border-radius 4px
    display inline-block
  &__current
    background-color $col-persian-green
    position absolute
    top 0
    left 0
    height 100%
    width 50%
    border-radius 4px
  &__number
    font-size 14px
    color $col-black
    display inline-block
    width 50px
    text-align center
