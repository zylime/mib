.c-header
  position absolute
  width 100%
  z-index 3
  &.pos-absolute
    position absolute
    background $col-white
  &.pos-relative
    position relative
  span
    color $col-white
  &--other
    display inline-block
    &--item
    &--share
    &--fav
      display inline-block
      font-size 0
    &--notif
      span
        font-size 10px
    &--item
      span
        font-size 8px
  &.has-shadow
    box-shadow 1px 1px 5px rgba(130, 130, 130, 0.3)
  &--title
    text-align center
    position absolute
    width 70%
    left 15%
    top 32%
    span
      font-size 16px

.c-header--sign-in
  padding 20px 0
  background $col-persian-green
  position relative
  a
    font-size 16px
  .ic--back
    background-position center
    margin-right 10px