.c-sign-in
  padding-top 50px
  &--bg
    background url(../img/bg-sign-in.png)
    background-size cover
    background-repeat no-repeat
    background-position center
    height 100%
    width 100%
    position relative
  h1
    font-size 44px
    color $col-tundora
    font-family $font-apple
  h2
    font-size 22px
    color $col-tundora

  &--main
    margin-top 100px
  &--form
    &--rol
      padding 10px 0
      margin-top 40px
      .ic--user
      .ic--psw
      .ic--eye
      input
        display inline-block
        vertical-align middle

      input
        width calc(100% - 45px)
        font-size 20px
        position relative
        padding 0 5px
        &.input-phone
          width calc(100% - 100px)
    &--link
      margin-top 10px
      a
        color $col-persian-green
    .button
    button
      width 100%
      height 50px
      line-height 50px
      border-radius 5px
      margin 30px 0 15px
      background $col-persian-green
      color $col-white
      display block
      text-align center
  &--other
    border-top 1px solid $col-iron
    position relative
    margin-top 50px
    span
      background $col-white
      position absolute
      padding 5px 10px
      left 50%
      transform translateX(-50%)
      top -14px
    .ic
      &--wechat
      &--qq
        border-radius 50%
        border 1px solid $col-mystic
        display inline-block
  &--register
    a
      display block
      width 100%
      border 1px solid $col-persian-green
      text-align center
      color $col-persian-green
      line-height 50px
      border-radius 5px
      
  