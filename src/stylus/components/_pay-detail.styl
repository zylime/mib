.c-pay-detail
  .section
    background $col-white
    padding 20px
  .image-container
    width 20px
    display inline-block
    vertical-align middle
    margin 0 20px 0 10px
    
    img
      width 100%
  &__info
    display inline-block
    vertical-align middle
    width calc(100% - 50px)
    p
      font-size 16px
      margin 5px 0
      span
        color $col-silver-sand-2
        font-size 12px
        margin-left 10px
        font-weight normal
  &__pay-method
    .ic--pay--wechat
      display inline-block
      vertical-align middle
      margin-right 10px
  &__sum
    .dot
    h3
      display inline-block
      vertical-align middle
    .dot
      width 6px
      height 6px
      border-radius 50%
      background $col-persian-green
      margin-right 10px
  &__refund
    ul
      margin 20px 0
      li
        list-style-type none
        margin 10px 0
        .dot
          font-size 10px
          width 15px
          height 15px
          color $col-white
          background $col-persian-green
          border-radius 50%
          display inline-block
          vertical-align top
          margin-right 7px
          text-align center
          margin-top 3px
        p
          display inline-block
          vertical-align top
          width calc(100% - 25px)
  &__submit-order
    padding 10px
    .left
    .right
      display inline-block
      height 50px
      vertical-align top
      line-height 50px
    .left
      background $col-white
      border-top-left-radius 25px
      border-bottom-left-radius 25px
      width calc(100% - 100px)
      text-align left
      padding-left 20px
    .right
      background $col-persian-green
      border-top-right-radius 25px
      border-bottom-right-radius 25px
      color $col-white
      text-align center
      width 100px
      font-weight bold
  &__stage-list
    li
      position relative
      list-style-type none
      margin 20px 0
      .content-container
      .icon
        display inline-block
        vertical-align middle
      .content-container
        width calc(100% - 30px)
        margin-left 10px
        padding 5px 10px
      .icon
        background-image url(../img/ic-group-1.png)
        background-size auto 100%
        background-repeat no-repeat
        width 20px
        height 20px
      &:before
        content ""
        width 2px
        height 22px
        background $col-iron
        display block
        position absolute
        bottom 29px
        left 9px
      &.style-1
        .icon
          background-position 0 0
        .content-container
          background-color $col-cornflower-blue
          
      &.style-2
        .icon
          background-position -20px 0
        .content-container
          background-color $col-cornflower-blue
        &:before
          background $col-persian-green
      &.style-3
        .icon
          background-position -40px 0
      
      &:nth-of-type(1)
        &:before
          display none
  
  &__store
    padding 20px
    background $col-white
    &__head
      .ic--store
      .store-name
      .product-image
      .product-description
        display inline-block
        vertical-align middle
      .store-name
        margin-left 10px
        padding-right 20px
      .product-image
        width 100px
      .product-description
        width calc(100% - 110px)
        margin-left 10px
    &__section
      &__item
        margin 20px 0
        .has-right-arrow--b
          padding-right 20px