.c-chat
  &--body
    &--notif
      background $col-alabaster
      color $col-dove-gray
      border-radius 28px
      padding 10px 20px
      font-size 11px
      margin-bottom 8px
      a
        color $col-paradiso
      &.group
        background $col-aqua-haze
        display inline-block
        margin-left auto
        margin-right auto
        a
          color $col-persian-green
    &--msg
      position relative
      box-sizing border-box
      &:after
        content ""
        width 20px
        height 30px
        position absolute
        top 0
        display block
      &--box
        padding 10px 20px
        display inline-block
    
      p
        margin-bottom 5px
      span
        font-size 12px
    &--me
      .c-chat--body--msg
        padding-right 20px
        
        
        &:after
          background url(../img/chat-corner-grey.png)
          background-repeat no-repeat
          background-size 100%
          right 0
        &--box
          background $col-gallery
          border-top-left-radius 10px
          border-bottom-left-radius 10px
          border-bottom-right-radius 10px
        p
          color $col-black
        span
          color $col-silver-sand
    &--sender
      .c-chat--body--msg
        padding-left 20px
        &:after
          content ""
          background url(../img/chat-corner-green.png)
          background-repeat no-repeat
          background-size 100%
          left 0
        &--box
          background $col-persian-green
          border-top-right-radius 10px
          border-bottom-left-radius 10px
          border-bottom-right-radius 10px
        p
          color $col-white
        span
          color $col-riptide
  
  &--input
    position fixed
    bottom 0
    width 100%
    left 0
    padding 10px 20px
    box-sizing border-box
    box-shadow 1px -1px 5px rgba(130, 130, 130, 0.3)
    background $col-white
    &--box
      height 40px
      padding 0px 10px
      box-sizing border-box
      color $col-black
      border 1px solid $col-alto
      width calc(100% - 80px)
      display inline-block
      vertical-align top
    &--insert
      width 80px
      display inline-block
      vertical-align top
      &--item
        display inline-block
        width 50%
        text-align center
        .ic--add-2
          width 25px
          height 25px
        &>div
          margin 5px auto
          float right
          position relative
        input
          position absolute
          width 100%
          height 100%
          opacity 0
    &--popup
      &--group
        display none
     
        padding-top 10px
        .item
          position relative
          margin-right 30px
          display inline-block
          // width 
          // padding 20px
          input
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            opacity 0
          &--top
            background $col-gallery
            border-radius 5px 
            padding 15px
            display inline-block
        &.active
          display block
        .emoji
          width 50px
          height 50px
          margin 5px
          img
            width 50px
            height 100%
          
  &--group-list
    .c-list--item
      padding 10px 0