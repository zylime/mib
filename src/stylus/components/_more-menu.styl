.c-more-menu
  &.active
    .ic--more-2
      background-image url(../img/ic-more-2-active.png)
  &--dropdown
    display none
    background $col-keppel
    width 130px
    position absolute
    right -10px
    top 40px
    border-radius 5px
    box-shadow 0px 1px 10px rgba(95,100,118,0.3)
    padding 10px 20px
    text-align left
    box-sizing border-box
    .ic--triangle
      // content ""
      display block
      border-left 10px solid transparent
      border-top 10px solid transparent
      border-right 10px solid transparent
      border-bottom 10px solid $col-keppel
      width 0
      height 0
      position absolute
      right 10px
      top -15px
      
    .ic--more-menu
      display inline-block
      vertical-align middle
      margin-right 8px
    &--item
      display block
      color $col-white
      padding 10px 0
      span
        color inherit
        font-size 16px !important
        vertical-align middle
        font-weight 400