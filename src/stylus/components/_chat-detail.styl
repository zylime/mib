.c-chat-detail
  background-color $col-porcelain
  height 100%
  .c-header
    background-color $col-white
  &--group
    background-color $col-white
    padding 20px 0 0
    &.l-flex
      flex-wrap wrap
    li
      list-style-type none
      width 14%
      margin 0 3% 20px
      
      a
        display block
      img
        display block
        margin-bottom 5px
      span
        font-size 12px
  .c-list
    background-color $col-white
    .title
      font-size 18px
      font-weight 300
    .has-right-arrow--b:after
      width 7px
      height 23px
      background-position center
    