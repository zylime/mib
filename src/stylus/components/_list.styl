.c-list
  &--item
    list-style-type none
    padding 20px 0
    border-bottom 1px solid $col-iron
    display block
    &:nth-last-of-type(1)
      border-bottom none
  &--form
    .title
      font-size 16px
      line-height 24px
    input
    textarea
      font-weight 300
      width 100%
      font-size 16px
      line-height 24px
    .c-list--item
      padding-bottom 5px
    
      