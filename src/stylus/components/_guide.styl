.c-guide
  padding-bottom 100px
  .smaller
    font-size 12px

  .title
    font-size 18px
  .list-number
    font-size 12px
    color $col-white
    background $col-persian-green
    width 15px
    height 15px
    line-height 15px
    border-radius 50%
    float left
    text-align center
    margin-top 5px
  .c-list--item--content
    padding-left 20px
  .c-list--item
    padding 30px 20px
  li
    padding-left 10px
    margin-bottom 10px
    list-style-type none
    
    &:before
      content ""
      width 6px
      height 6px
      background $col-persian-green
      border-radius: 50%
      display inline-block
      left 12px
      top 7px
      margin-right 10px