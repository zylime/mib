.c-guide
  padding-bottom 100px
  .smaller
    font-size 12px

  .title
    font-size 18px
  .list-number
    font-size 12px
    color $col-white
    background $col-persian-green
    width 15px
    height 15px
    line-height 15px
    border-radius 50%
    float left
    text-align center
    margin-top 5px
  .c-list--item--content
    padding-left 20px
  .c-list--item
    padding 30px 20px
  li
    padding-left 10px
    margin-bottom 10px
    list-style-type none
    
    &:before
      content ""
      width 6px
      height 6px
      background $col-persian-green
      border-radius: 50%
      display inline-block
      left 12px
      top 7px
      margin-right 10px
  &--ol-list
    padding 20px 20px 20px 10px
    li
      list-style-type none
      position relative
      padding-left 35px
      margin 0
      &:before
        content ""
        background url(../img/ic-bullet.png)
        background-size 70%
        background-repeat no-repeat
        width 30px
        height 30px
        display block
        position absolute
        background-position center
        left 0
        top 50%
        transform translateY(-50%)
        background-color $col-white
        z-index 1
        margin 0 auto
      &:after
        content ""
        display block
        width 1px
        height 100%
        position absolute
        top 0
        left 15px
        background $col-persian-green
      .box
        padding 15px 10px
        border 1px solid $col-iron
        border-radius 5px
        .num
          width 60px
          display inline-block
          vertical-align top
        &--content
          width calc(100% - 60px)
          display inline-block
          vertical-align top
        .title
          font-size 16px
          line-height 24px
  &__add-product
    padding-top 20px
    #period_number-error
      display none !important
    &__thumb
      width 100px
      height 100px
      margin-left 30px
      margin-bottom 10px
      position relative
      .remove-btn
        position absolute
        top -3px
        right -3px
        border 1px solid $col-white
        border-radius 50%
        .ic--mutiply
          width 20px
          height 20px
      img
        width 100%
        height auto
    &__list
      .collapse
        i:after
          content "+"
          width 20px
          height 20px
          display inline-block
          background-color $col-persian-green
          color $col-white
          line-height 17px
          font-size 14px
          text-align center
          font-style initial
          border-radius 50%
          box-sizing border-box
        .c-guide__add-product
          max-height 0
          overflow hidden
          transition .8s
          
        &.active
          i:after
            content "-"
          .c-guide__add-product
            max-height 1000px
            padding-bottom 20px
          
    &__item
      font-size 16px
      &.display-date
        .icon
          display none
        &.active
          .icon
            display inline-block
            vertical-align middle
      .date-picker-input
        min-width 200px
      .note
        font-size 10px
        font-weight 200
        padding-left 10px
      .title
        display inline-block
        vertical-align middle
        font-size 16px
      .input
        display inline-block
        vertical-align middle
        width calc(100% - 70px)
      textarea
      input
      select
        font-size inherit
        &.error
          border 1px solid red
          display inline-block
          border-radius 5px
          margin-top 0
      select
        background-color $col-cornflower-blue
        padding 2px 0 2px 5%
        text-align center
        text-align-last center
        font-size 12px

      textarea
        height 24px
        border none
      textarea
      input
        &:-ms-input-placeholder
          color $col-iron
        &::-ms-input-placeholder
          color $col-iron
        &::placeholder
          color $col-iron
      input
        &::-webkit-input-placeholder
          font-weight 300
        &:-moz-placeholder
          font-weight 300
        &::-moz-placeholder
          font-weight 300
        &:-ms-input-placeholder
          font-weight 300
      input[type="checkbox"]
      input[type="radio"]
        opacity 0
      &__period
        .ic--checkbox-2
          display inline-block
          vertical-align middle
        &__detail
          display inline-block
          vertical-align middle
          padding-left 10px
          width calc(100% - 30px)
          input
            width 70px
            font-size 16px

          p
            font-weight 300
            font-size 16px
      &--price
        input
          width 90px
        .left
          width 110px
        .right
          width calc(100% - 110px)
      .radio-group
        &__item
          padding-right 20px
          margin-bottom 10px
          label
          .ic--checkbox-2
            display inline-block
            vertical-align middle
          label
            font-weight 200
            padding-right 5px
    
    &__general
      margin-bottom 20px
      .input-wrapper
        padding 5px
      .media-wrapper
        position relative

        input.input-file
          left 0
          top 0
          position absolute
          opacity 0
          width 100%
          height 100%
      &__line1
        .input-wrapper
          width calc(100% - 60px)
          margin 0 10px
          input
            width calc(100% - 50px)
      &__line2
        .input-wrapper
          margin 0 10px 0 30px
          width calc(100% - 130px)
          input
            width calc(100% - 50px)
      &__line2
        .btn-type-2
          width 90px
          height 30px
          line-height 30px
    &__sales
      input[type="radio"]
        opacity 0
      &__line3
        padding-left 28px
        input
          width 50px
    &__support
      .description
        width calc(100% - 50px)
        display inline-block
        vertical-align top
      .ic--checkbox-2
        display inline-block
        vertical-align middle
        margin-right 10px

      input[type="radio"]
        opacity 0
      .radio-group__item
        margin-bottom 10px
        input[type="number"]
          width 40px
      &__invoice
        padding-left 28px
        font-size 12px
        input[type="text"]
          width calc(100% - 130px)
          font-size 12px
        .invoice_type
          background-color $col-gallery-grey
          color $col-tundora
          padding 5px 10px
          margin 0 5px

          span
            color inherit
          &.active
            background-color $col-cornflower-blue
            color $col-persian-green
            span:before
              content ""
              background url(../img/ic-checked.png)
              display inline-block
              width 12px
              height 10px
              background-size 100% auto
              background-position center
              background-repeat no-repeat
              margin-right 5px
 
          
         
         
  &__refund-setting
    .item
      margin 30px auto
    .bullet
    .content
      display inline-block
      vertical-align top
    .bullet
      width 25px
      padding-top 2px
      span
        width 15px
        height 15px
        font-size 11px
        line-height 15px
        background-color $col-persian-green
        color $col-white
        border-radius 50%
        display block
        text-align center
        box-sizing border-box
    .content
      width calc(100% - 25px)
      input
        width 50px
        border-bottom 1px solid $col-silver-chalice
        text-align center
        color $col-persian-green
        background none
    input[type="checkbox"]
      opacity 0
