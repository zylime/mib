.c-setting
  &--top
    background url(../img/setting-img-1.png)
    background-size cover
    background-repeat no-repeat
    background-position center
    width 100%
    height 140px
    h1
    p
    a
      color $col-white
    img
      border 2px solid $col-white
  .c-list
    .title
      font-size 18px
  &--user
    
    &--thumb
      background $col-concrete
      height 260px
      text-align center
      &--img
        height 100%
        margin auto
        display inline-block
        position relative
        img
          height 100%
          width auto
        .ic
          position absolute
          bottom 10px
          right 10px
        .input-file
          position absolute
          width 25px
          height 25px
          bottom 10px
          right 10px
          z-index 1
          opacity 0
    .c-list
      p
      input
      select
      textarea
        font-size 16px
        line-height 24px
      select
        padding 5px
      p
        margin-bottom 10px