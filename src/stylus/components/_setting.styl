.c-setting
  &--top
    background url(../img/setting-img-1.png)
    background-size cover
    background-repeat no-repeat
    background-position center
    width 100%
    // height 140px
    h1
    p
      color $col-white
    a
      color $col-pale-cyan
    img
      border 2px solid $col-white
  .model
    padding 5px 15px
    border-top-left-radius 15px
    border-bottom-left-radius 15px
    background-color $col-deep-cyan
    margin-right -20px
    margin-bottom 15px
    width 90px
    float right
    span
      color $col-white
  .c-list
    .title
      font-size 18px
  &--user
    input[type="date"]
      border 1px solid $col-iron
      border-radius 5px
      padding-left 5px
      background transparent
    &--thumb
      background $col-concrete
      height 260px
      text-align center
      &--img
        height 100%
        margin auto
        display inline-block
        position relative
        img
          height 100%
          width auto
        .ic
          position absolute
          bottom 10px
          right 10px
        .input-file
          position absolute
          width 25px
          height 25px
          bottom 10px
          right 10px
          z-index 1
          opacity 0
    .c-list
      p
      input
      select
      textarea
        font-size 16px
        line-height 24px
      select
        padding 5px
        max-width 100%
        border-radius 5px
      p
        margin-bottom 10px