.c-search
  font-size 17px
  h1
    font-size 22px
  
  &--icon
    width 14px
    height 24px
    float left
    margin 0 10px 0 16px
  &--form
    &--input
      padding 8px 0
    &--cancel
      font-size 13px
      width 50px
      display inline-block
      padding-left 20px
  input
    border none
    line-height 20px
    width calc(100% - 60px)
    outline none
    background inherit
    font-size 15px
    color $col-tundora
    font-weight 500
  &--result
      input
        font-size 14px
        font-weight normal
        line-height 18px
      .c-search--form--input
        padding 5px 0
        width calc(100% - 50px)
        display inline-block
      .c-search--icon
        margin 0 10px
        width 12px

  &--history
    position relative
    h1
      font-size 18px
      font-weight bold
    &--bin
      position absolute
      top 0
      right 0
    &--more
      color $col-persian-green
      position relative
      font-size 13px
      padding-right 12px
      &:before
      &:after
        content ""
        width 6px
        height 1px
        position absolute
        top 9px
        right 4px
        background $col-persian-green
      &:before
        transform rotate(-45deg)
        right 0
      &:after
        transform rotate(45deg)
      &[data-expanded="true"]
        &:before
          transform rotate(45deg)
          right 0
        &:after
          transform rotate(-45deg)
    &--container
      width 100%
      height calc((28px + 12px)*3)
      overflow hidden
    &--list
      &:after
        clear both
      &--item
        float left
        padding 7px 20px
        background $col-wild-sand
        border-radius 5px
        margin-right 10px
        margin-bottom 12px
        font-size 13px
        
    
  
  &--grey
    background $col-porcelain
    padding 15px 20px
    
    .c-search--form--input
      background $col-white
      width 100%
      margin auto
      border-radius 25px
    

  &--3
    .c-friends--people
      margin-top 10px
      .c-list--item
        border none
        padding 10px 0
    &--group-chat
      .c-list--item
        img
          display inline-block
          vertical-align middle
          width 50px
          margin-right 10px
        .c-search--3--group-chat--info
          vertical-align middle
          display inline-block
          width calc(100% - 60px)
          .title
            font-weight bold
            font-size 14px
            line-height 26px
          .brief
            color $col-scorpionapprox
            text-overflow ellipsis
            overflow hidden
            white-space nowrap
            font-weight 300
            font-size 12px
         
        