.c-search
  font-size 17px
  h1
    font-size 22px
  
  &--icon
    width 18px
    height 24px
    float left
    margin 0 10px 0 20px
  &--form
    font-size 17px
    &--input
      padding 14px 0

      
  input
    border none
    line-height 24px
    width calc(100% - 60px)
    font-size 20px
    outline none
    background inherit
    font-size 19px
    color $col-tundora
  &--history
    position relative
    h1
      font-size 22px
      font-weight 500
    &--bin
      position absolute
      top 0
      right 0
    &--more
      color $col-persian-green
      position relative
      &:before
      &:after
        content ""
        width 9px
        height 2px
        position absolute
        top 10px
        right -13px
        background $col-persian-green
      &:before
        transform rotate(-45deg)
        right -19px
      &:after
        transform rotate(45deg)
      &[data-expanded="true"]
        &:before
          transform rotate(45deg)
          right -19px
        &:after
          transform rotate(-45deg)
    &--container
      width 100%
      height calc((40px + 12px)*3)
      overflow hidden
    &--list
      &:after
        clear both
      &--item
        float left
        padding 10px 20px
        background $col-wild-sand
        border-radius 5px
        margin-right 10px
        margin-bottom 12px
        
    