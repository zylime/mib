.has-shadow
  box-shadow 1px 1px 10px rgba(130, 130, 130, 0.3)
.hr
  border none
  border-top 1px solid $col-iron

.hide
  display none
.clearfix:after
  content ""
  display block
  clear both
.has-corner--5
  border-radius 5px
.has-corner--25
  border-radius 25px
.has-corner--50p
  border-radius 50%
.has-menu
  // margin-bottom 78px
  padding-bottom 78px !important
.has-right-arrow--b
  position relative
  &:after
    content ""
    background url(../img/ic-right-arrow-b.png)
    background-size 100%
    background-repeat no-repeat
    width 9px
    height 18px
    position absolute
    right 0
    top 50%
    transform translateY(-50%)
    -webkit-transform translateY(-50%)
    -moz-transform translateY(-50%)
    -ms-transform translateY(-50%)
.has-right-arrow
  position relative
  &:before
  &:after
    content ""
    width 10px
    height 2px
    position absolute
    right 0
  &:before
    transform rotate(45deg) translateY(-50%)
    top calc(50% - 2.5px)
  &:after
    transform rotate(135deg) translateY(-50%)
    top calc(50% + 2.5px)
  &--porcelain 
    &:before
    &:after
      background-color $col-porcelain

.border-bottom
  border-bottom 1px solid $col-iron



