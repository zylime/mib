.txt
  &--white
    color $col-white
  &--black
    color $col-black !important
  &--bittersweet
    color $col-bittersweet !important
  &--persian-green
    color $col-persian-green
  &--burnt-sienna
    color $col-burnt-sienna
  &--edwardapprox
    color $col-edwardapprox
  &--tiara
    color $col-tiara
  &--edwardapprox
    color $col-edwardapprox
  &--dove-gray
    color $col-dove-gray

.txt--font--16
  font-size 16px
  line-height 24px
.txt--h1
  font-size 24px
.txt--c
  text-align center
.txt--r
  text-align right
.txt--l
  text-align left

for $x in 1..6
  .txt--{$x}00
    font-weight $x*100
