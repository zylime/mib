.txt
  &--white
    color $col-white
  &--black
    color $col-black !important
  &--bittersweet
    color $col-bittersweet !important
  &--persian-green
    color $col-persian-green !important
  &--burnt-sienna
    color $col-burnt-sienna !important
  &--edwardapprox
    color $col-edwardapprox !important
  &--tiara
    color $col-tiara !important
  &--edwardapprox
    color $col-edwardapprox !important
  &--dove-gray
    color $col-dove-gray !important
  &--cinnabar
    color $col-cinnabar !important
  &--iron
    color $col-iron !important
  &--silver-sand
    color $col-silver-sand-2 !important
.txt--font--20
  font-size 20px !important
  line-height 28px !important
.txt--font--18
  font-size 18px !important
  line-height 26px !important
.txt--font--16
  font-size 16px !important
  line-height 24px !important
.txt--font--14
  font-size 14px !important
  line-height 20px !important
.txt--font--12
  font-size 12px !important
  line-height 18px !important
.txt--h1
  font-size 24px
.txt--c
  text-align center
.txt--r
  text-align right
.txt--l
  text-align left
.txt--b
  font-weight bold
  
.txt--cross
  text-decoration line-through
.txt--underline--grey
  border-bottom 1px solid #dde0e3 
.txt--underline
  text-decoration underline


for $x in 1..6
  .txt--{$x}00
    font-weight $x*100
