//- 新用户注册
extends ../partials/_template
include ../mixins/_popup
include ../mixins/_loading

block content
  input(type="hidden", name="register-210", value="邮箱或手机不能为空")
  input(type="hidden", name="register-211", value="输入错误，请重新输入")
  input(type="hidden", name="register-212", value="邮箱不可用")
  input(type="hidden", name="register-213", value="手机号不可用")
  input(type="hidden", name="register-214", value="邮箱已注册")
  input(type="hidden", name="register-215", value="手机号已注册")
  input(type="hidden", name="register-220", value="密码不能为空")
  input(type="hidden", name="register-221", value="密码不足6位")
  input(type="hidden", name="register-222", value="密码超过18位")
  input(type="hidden", name="register-223", value="密码不能包含特殊字符")
  input(type="hidden", name="register-230", value="用户名不能为空")
  input(type="hidden", name="register-231", value="该用户名已被注")
  input(type="hidden", name="register-232", value="用户名不能包含特殊字符")
  input(type="hidden", name="register-233", value="用户名包含敏感词")
  input(type="hidden", name="register-email-200", value="尚未激活")
  input(type="hidden", name="register-mobile-200", value="验证失败")
  div(data-js-register)
    .c-header.c-header--sign-in
      a.l-mgn--l-20(href="sign-in.html")
        .ic--back.l-inl-b.l-v--m
        span.l-inl-b.l-v--m 新用户注册
    .c-content.c-sign-in--bg
      
      .c-sign-in.c-register
        h1 欢迎使用MIB
        h2 (Mega Icebreaker)
        .c-sign-in--main
          form.js-register-form
            .c-sign-in--form--rol.border-bottom
              .ic--user.l-mgn--r-5
              input(type="text", name="name", autocomplete="on", placeholder="请输入昵称，1-18位中英文、字母组合", required)
            .c-sign-in--form--rol.border-bottom
              .ic--email.l-mgn--r-5
              input.input-email(type="text", name="email_mobile", autocomplete="on", placeholder="请输入邮箱地址或手机号码", required)
            .c-sign-in--form--rol.border-bottom
              .ic--psw.l-mgn--r-5
              input(type="password", name="pwd", placeholder="请填写登陆密码", required)
              //- .ic--eye
            div.c-sign-in--form--link.txt--r
              a(href="sign-in-code.html") 用短信验证码登录
            .error.js-error
            button.button.btn-type-2.l-mgn--t-20.js-register-btn(disabled) 注册


          .c-sign-in--other
            span 第三方账号快速登录
            .txt--c.l-mgn--t-20
              .ic--wechat.l-mgn--10
              .ic--qq.l-mgn--10

    +popup('register')
    +popup('verifyEmail')
    +popup('signIn')
    +loading



