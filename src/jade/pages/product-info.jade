//- 产品信息添加
extends ../partials/_template

block content
  .c-product-info(data-js-product-info)
    .c-header.l-columns.has-shadow.l-v--m.l-pad--20.pos-relative
      .c-header--title
        span.txt--black.txt--600 添加产品信息
      .col.c-header--back.l-w--50p
        a.ic--back--black(href="#")
    form.l-columns.c-product-info--form
      .l-w--100p.border-bottom.l-pad--20
        textarea.l-w--100p(name="", maxlength="60", placeholder="标题： 一句话突出产品核心卖点和价值点（30字以内）")
      .l-w--100p.border-bottom.l-pad--20
        textarea.l-w--100p.l-mgn--b-30(name="", maxlength="400",placeholder="详细描述产品的核心特色，目前的进展，以及您对商务合作预期（200字以内）", rows="5")
         
        .l-flex.c-product-info--form--media.js-media
          .item
            input.input-file.js-input-file(type="file", name="", accept="image/*" capture="camera")
            
            .item--content.js-add-media
              .ic--add-3
              span 照片/视频
      .l-w--100p.border-bottom.l-pad--20
        .title 项目当前完成度
        input.l-w--100p.l-mgn--t-10(type="text", placeholder="请填写百分比数字%")
      .l-w--100p.border-bottom.l-pad--20
        .title 上传游戏包下载链接（选填）
        
        input.l-w--100p.l-mgn--t-20(type="text", placeholder="请填写游戏包的下载链接")
      .l-w--100p.border-bottom.l-pad--20
        input.l-w--100p(type="text", placeholder="请填写下载游戏包的密码")
      .l-w--100p.border-bottom.l-pad--20
        textarea#comments(name="", placeholder="请填写您认为重要的其他备注信息")
      .l-w--100p.border-bottom.l-pad--20
        .title 包体大小
        input.l-w--100p.l-mgn--t-10(type="text", placeholder="请填写项目完整版本体大小的预估，单位为M或G")
      .l-w--100p.border-bottom.l-pad--20
        .title 目前语言版本有哪些？
        input.l-w--100p.l-mgn--t-10(type="text", placeholder="请填写目前拥有的语言版本，中间用逗号隔开")
      .l-pad--20
        a.btn-type-3(href="#") 下一步






        

    
