          .left
            img(src=paths.img + 'group-thumb.jpg', alt="")
            //- a.btn-type-1(href="#") 撰写评价
          .c-msg--main--item--info
            .l-w--100p
              .name 美术外包组
              .time 10分钟前
            .l-w--100p
              .brief 有问题随时提问有问题随时提问有问题随时提问有问题随时提问
              .number 
                span 1
            .l-w--100p
              .order-detail
                .ic--order
                span 订单已确认
                .ic--timer
                span 18/02/15 - 18/02/30
        .c-msg--main--item.active
          .left
            img(src=paths.img + 'group-thumb.jpg', alt="")
            a.btn-type-1(href="#") 撰写评价
          .c-msg--main--item--info
            .l-w--100p
              .name 美术外包组
              .time 10分钟前
