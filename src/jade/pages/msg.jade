extends ../partials/_template


include ../mixins/_menu
include ../mixins/_search-bar

block content
  .has-menu.l-pad--t-10.c-msg(data-js-msg)
    header.c-msg--header.c-content
      a.c-msg--header--item(href="#")
        .ic--contacts.active
        span 通讯录
      .c-msg--header--item.pos-relative.c-more-menu(data-js-more-menu)
        a(href="javascript:void(0)").js-open-menu.l-block
          .ic--more-2
